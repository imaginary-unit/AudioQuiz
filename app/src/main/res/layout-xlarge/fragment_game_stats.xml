<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.imunit.maquiz.fragments.GameStatsFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
        <LinearLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="20dp">
                <android.support.v7.widget.GridLayout
                    android:id="@+id/topScoresLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp">
                    <TextView
                        android:id="@+id/topScoresTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        app:layout_row="0"
                        app:layout_columnSpan="2"
                        app:layout_columnWeight="1"
                        app:layout_gravity="center"
                        android:textSize="28sp"
                        android:textColor="@color/colorForeground"
                        android:textStyle="bold"
                        android:text="@string/stats_top_scores"/>
                </android.support.v7.widget.GridLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="20dp">
                <android.support.v7.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        app:layout_row="0"
                        app:layout_column="0"
                        app:layout_columnWeight="1"
                        app:layout_gravity="center_vertical"
                        android:textSize="28dp"
                        android:textColor="@color/colorForeground"
                        android:text="@string/stats_games_played"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        app:layout_row="1"
                        app:layout_column="0"
                        app:layout_columnWeight="1"
                        app:layout_gravity="center_vertical"
                        android:textSize="28dp"
                        android:textColor="@color/colorForeground"
                        android:text="@string/stats_clean_games"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        app:layout_row="2"
                        app:layout_column="0"
                        app:layout_columnWeight="1"
                        app:layout_gravity="center_vertical"
                        android:textSize="28dp"
                        android:textColor="@color/colorForeground"
                        android:text="@string/stats_correct_guess_ratio"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        app:layout_row="3"
                        app:layout_column="0"
                        app:layout_columnWeight="1"
                        app:layout_gravity="center_vertical"
                        android:textSize="28dp"
                        android:textColor="@color/colorForeground"
                        android:text="@string/stats_average_game_score"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        app:layout_row="4"
                        app:layout_column="0"
                        app:layout_columnWeight="1"
                        app:layout_gravity="center_vertical"
                        android:textSize="28dp"
                        android:textColor="@color/colorForeground"
                        android:text="@string/stats_longest_fast_row"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        app:layout_row="5"
                        app:layout_column="0"
                        app:layout_columnWeight="1"
                        app:layout_gravity="center_vertical"
                        android:textSize="28dp"
                        android:textColor="@color/colorForeground"
                        android:text="@string/stats_fastest_guess_time"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        app:layout_row="6"
                        app:layout_column="0"
                        app:layout_columnWeight="1"
                        app:layout_gravity="center_vertical"
                        android:textSize="28dp"
                        android:textColor="@color/colorForeground"
                        android:text="@string/stats_average_guess_time"/>
                    <TextView
                        android:id="@+id/textGamesCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        app:layout_row="0"
                        app:layout_column="1"
                        app:layout_columnWeight="1"
                        app:layout_gravity="center"
                        android:textSize="28dp"
                        android:textColor="@color/colorForeground"
                        android:text="@string/stats_number_placeholder"/>
                    <TextView
                        android:id="@+id/textCleanGamesCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        app:layout_row="1"
                        app:layout_column="1"
                        app:layout_columnWeight="1"
                        app:layout_gravity="center"
                        android:textSize="28dp"
                        android:textColor="@color/colorForeground"
                        android:text="@string/stats_number_placeholder"/>
                    <TextView
                        android:id="@+id/textCorrectGuessRatio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        app:layout_row="2"
                        app:layout_column="1"
                        app:layout_columnWeight="1"
                        app:layout_gravity="center"
                        android:textSize="28dp"
                        android:textColor="@color/colorForeground"
                        android:text="@string/stats_number_placeholder"/>
                    <TextView
                        android:id="@+id/textAverageScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        app:layout_row="3"
                        app:layout_column="1"
                        app:layout_columnWeight="1"
                        app:layout_gravity="center"
                        android:textSize="28dp"
                        android:textColor="@color/colorForeground"
                        android:text="@string/stats_number_placeholder"/>
                    <TextView
                        android:id="@+id/textLongestFastGuessRow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        app:layout_row="4"
                        app:layout_column="1"
                        app:layout_columnWeight="1"
                        app:layout_gravity="center"
                        android:textSize="28dp"
                        android:textColor="@color/colorForeground"
                        android:text="@string/stats_number_placeholder"/>
                    <TextView
                        android:id="@+id/textFastestGuessTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        app:layout_row="5"
                        app:layout_column="1"
                        app:layout_columnWeight="1"
                        app:layout_gravity="center"
                        android:textSize="28dp"
                        android:textColor="@color/colorForeground"
                        android:text="@string/stats_number_placeholder"/>
                    <TextView
                        android:id="@+id/textAverageGuessTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        app:layout_row="6"
                        app:layout_column="1"
                        app:layout_columnWeight="1"
                        app:layout_gravity="center"
                        android:textSize="28dp"
                        android:textColor="@color/colorForeground"
                        android:text="@string/stats_number_placeholder"/>
                </android.support.v7.widget.GridLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
