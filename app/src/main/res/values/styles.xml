<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.Base" />

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBack1</item>
    </style>

    <style name="OutlinedText">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="TextShadow">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:shadowColor">#77000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">6</item>
    </style>

    <style name="ToolTipLayoutStyle">
        <item name="ttlm_padding">@dimen/ttlm_default_padding</item>
        <item name="ttlm_strokeColor">@android:color/transparent</item>
        <item name="ttlm_backgroundColor">@color/colorPrimaryDarkHalf</item>
        <item name="ttlm_strokeWeight">@dimen/ttlm_default_stroke_weight</item>
        <item name="ttlm_cornerRadius">@dimen/ttlm_default_corner_radius</item>
        <item name="ttlm_arrowRatio">1.4</item>
        <item name="android:textAppearance">@style/TooltipTextAppearance</item>
        <item name="ttlm_overlayStyle">@style/ToolTipOverlayDefaultStyle</item>
        <item name="ttlm_elevation">@dimen/ttlm_default_elevation</item>
    </style>

    <style name="ToolTipLayoutStyleXlarge">
        <item name="ttlm_padding">@dimen/ttlm_default_padding</item>
        <item name="ttlm_strokeColor">@android:color/transparent</item>
        <item name="ttlm_backgroundColor">@color/colorPrimaryDarkHalf</item>
        <item name="ttlm_strokeWeight">@dimen/ttlm_default_stroke_weight</item>
        <item name="ttlm_cornerRadius">@dimen/ttlm_default_corner_radius</item>
        <item name="ttlm_arrowRatio">1.4</item>
        <item name="android:textAppearance">@style/TooltipTextAppearanceXlarge</item>
        <item name="ttlm_overlayStyle">@style/ToolTipOverlayDefaultStyle</item>
        <item name="ttlm_elevation">@dimen/ttlm_default_elevation</item>
    </style>

    <style name="TooltipTextAppearance">
        <item name="android:textColor">@color/colorForeground</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="TooltipTextAppearanceXlarge">
        <item name="android:textColor">@color/colorForeground</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">16dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TabLayoutTextAppearanceXlarge" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">28dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
