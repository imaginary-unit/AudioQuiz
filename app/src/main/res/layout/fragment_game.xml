<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.imunit.maquiz.fragments.GameFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/cardGameStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="10dp">
        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            app:rowCount="2"
            app:columnCount="6">
            <ImageView
                android:id="@+id/iconTracks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_row="0"
                app:layout_column="0"
                app:layout_columnWeight="0.5"
                android:src="@drawable/library_music"/>
            <TextView
                android:id="@+id/textTracks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_row="0"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_gravity="center_vertical"
                android:textColor="@color/colorForeground"
                android:text="1 / 10"/>

            <ImageView
                android:id="@+id/iconTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_row="0"
                app:layout_column="2"
                app:layout_columnWeight="0.5"
                android:src="@drawable/timer"/>
            <TextView
                android:id="@+id/textTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_row="0"
                app:layout_column="3"
                app:layout_columnWeight="1"
                app:layout_gravity="center_vertical"
                android:textColor="@color/colorForeground"
                android:text="0 s"/>

            <ImageView
                android:id="@+id/iconScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_row="0"
                app:layout_column="4"
                app:layout_columnWeight="0.5"
                android:src="@drawable/star"/>
            <TextView
                android:id="@+id/textScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_row="0"
                app:layout_column="5"
                app:layout_columnWeight="1"
                app:layout_gravity="center_vertical"
                android:textColor="@color/colorForeground"
                android:text="0"/>

            <ru.imunit.maquiz.views.widgets.InfoBar
                android:id="@+id/infoBar"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_row="1"
                app:layout_column="0"
                app:layout_columnSpan="6"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

        </android.support.v7.widget.GridLayout>
    </android.support.v7.widget.CardView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="10dp">
            <android.support.v7.widget.GridLayout
                android:id="@+id/layoutTracks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.GridLayout>
        </android.support.v7.widget.CardView>
    </FrameLayout>

</LinearLayout>
